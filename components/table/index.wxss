.table{
    /* border:1px solid #dadada; */
    border-top:1rpx solid #dadada;
    border-left: 1rpx solid #dadada;
    width: 100%;
}
.content_list{
    background-color: white;
    min-height: 340rpx;
}
.tr{
    /* width:100%; */
    display: flex;
    flex-direction: row;
    flex-flow: nowrap;
    white-space: nowrap;
    /* justify-content: space-between; */
}
.th{
    /* display: inline-block; */
    padding: 6rpx 12rpx;
    border-bottom: 1rpx solid #888;
    border-right: 1rpx solid #888;
    text-align: center;
    /*font-weight: 800;*/
    background-color: #dadada;
    font-size: 28rpx;
    color: rgba(23, 21, 23, 0.73);
    overflow: hidden;
    word-break:break-all
}
.td{
    padding: 6rpx 12rpx;
    border-bottom: 1rpx solid #888;
    border-right: 1rpx solid #888;
    text-align: center;
    width: 100%;
    font-size: 28rpx;
    color: #666666;
    overflow: hidden;
    word-wrap:break-word;
    white-space: pre-wrap;
}
 
.left{
    float: left;
}

    
